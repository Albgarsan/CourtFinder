<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.courtfinder.ui.profile.ProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/navigation_bookings"
        android:name="com.example.courtfinder.ui.bookings.BookingsFragment"
        android:label="@string/see_reservations"
        tools:layout="@layout/fragment_bookings" />

    <fragment
        android:id="@+id/navigation_new_bookings"
        android:name="com.example.courtfinder.ui.newBookings.NewBookingsFragment"
        android:label="@string/make_reservation"
        tools:layout="@layout/fragment_new_bookings" />
</navigation>