<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5B98B3"
    tools:context=".ui.newBookings.NewBookingsFragment">

    <LinearLayout
        android:id="@+id/new_bookings_layout"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="55dp">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="200dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_marginBottom="20dp"
            android:text="@string/new_booking"/>
        <Spinner
            android:id="@+id/spinner_sport"
            android:layout_height="60dp"
            android:layout_width="match_parent"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:layout_marginBottom="8dp"
            android:textAlignment="center"
            android:background="@drawable/spinner_border"/>
        <Spinner
            android:id="@+id/spinner_court"
            android:layout_height="60dp"
            android:layout_width="match_parent"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:layout_marginBottom="8dp"
            android:textAlignment="center"
            android:background="@drawable/spinner_border"/>
        <EditText
            android:id="@+id/edit_date"
            android:layout_height="60dp"
            android:layout_width="match_parent"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:focusable="false"
            android:clickable="true"
            android:background="@drawable/spinner_border"
            android:textColorHint="@color/black"
            android:hint="@string/select_date" />
        <Spinner
            android:id="@+id/spinner_time"
            android:layout_height="60dp"
            android:layout_width="match_parent"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:layout_marginBottom="8dp"
            android:textAlignment="center"
            android:background="@drawable/spinner_border"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="@string/need_a_partner"
                android:textColor="@color/black" />
            <Switch
                android:id="@+id/switch_partner"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textOff="No"
                android:textOn="Yes"
                android:layout_marginBottom="8dp"/>
        </LinearLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp">
            <ImageButton
                android:id="@+id/btn_save"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/tennis_ball"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:contentDescription="@string/save" />
            <TextView
                android:id="@+id/text_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/save"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_gravity="center"/>
        </FrameLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>